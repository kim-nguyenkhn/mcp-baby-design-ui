{
  "name": "@mcp-baby-design-ui/react",
  "version": "0.1.0",
  "description": "A pastel-themed React component library with 20 accessible components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kim-nguyenkhn/mcp-baby-design-ui.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/kim-nguyenkhn/mcp-baby-design-ui#readme",
  "keywords": ["react", "components", "ui-kit", "design-system", "accessible", "pastel", "tailwindcss"],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": ["**/*.css"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./globals.css": "./src/globals.css"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "@mcp-baby-design-ui/tokens": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0"
  },
  "files": ["dist", "src/globals.css"]
}
